# 包含所有Python文件
include *.py
recursive-include * *.py

# 包含编译后的二进制文件
recursive-include * *.so
recursive-include * *.pyd
recursive-include * *.dll
recursive-include * *.dylib

# 确保 core 目录下的 .so 文件被包含
include deepenc/core/*.so
include deepenc/core/*.pyd
include deepenc/core/*.dll
include deepenc/core/*.dylib

# 包含文档
include README.md
include LICENSE
include requirements.txt
include pyproject.toml

# 包含配置文件
include *.cfg
include *.ini
include *.toml

# 排除不需要的文件
exclude *.pyc
exclude *.pyo
exclude __pycache__
exclude .git*
exclude .cursor*
exclude .vscode*
exclude .idea*
exclude build/
exclude dist/
exclude *.egg-info/
exclude .pytest_cache/
exclude .coverage
exclude .mypy_cache/
exclude .tox/
exclude .venv/
exclude venv/
exclude env/
exclude node_modules/
exclude .DS_Store
exclude Thumbs.db
